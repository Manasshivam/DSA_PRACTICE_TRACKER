class Solution:
    def setZeroes(self, matrix: list[list[int]]) -> None:
        if not matrix:
            return
        num_rows = len(matrix)
        num_cols = len(matrix[0])
        
        rows_to_zero = set()
        cols_to_zero = set()
        for i in range(num_rows):
            for j in range(num_cols):
                if matrix[i][j] == 0:
                    rows_to_zero.add(i)
                    cols_to_zero.add(j)

        for i in range(num_rows):
            for j in range(num_cols):
                if i in rows_to_zero or j in cols_to_zero:
                    matrix[i][j] = 0
